{
  "name": "phone-catalogue-api",
  "version": "1.0.0",
  "description": "phone-catalogue-api",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HoangNguyen95/phone-catalogue.git"
  },
  "keywords": [],
  "author": "David Guijarro <guijarro.dav@gmail.com>",
  "license": "Apache 2.0",
  "bugs": {
    "url": "https://github.com/HoangNguyen95/phone-catalogue/issues"
  },
  "homepage": "https://github.com/HoangNguyen95/phone-catalogue",
  "dependencies": {
    "@nestjs/common": "^7.6.15",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.15",
    "@nestjs/microservices": "^7.6.15",
    "@nestjs/platform-express": "^7.6.15",
    "@nestjs/swagger": "^4.8.0",
    "@nestjs/testing": "^7.6.15",
    "@nestjs/typeorm": "^7.1.5",
    "@nestjs/websockets": "^7.6.15",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "nest": "^0.1.6",
    "pg": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.7",
    "slug": "^4.0.3",
    "sqlite3": "^5.0.2",
    "supertest": "^6.1.3",
    "swagger-ui-express": "^4.1.6",
    "typeorm": "^0.2.32",
    "typescript": "^4.2.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/node": "^8.10.66",
    "@types/slug": "^0.9.1",
    "jest": "^26.6.3",
    "nodemon": "^1.19.4",
    "request": "^2.88.2",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": ".*\\.spec.(ts|tsx|js)$"
  }
}
